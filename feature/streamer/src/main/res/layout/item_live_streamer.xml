<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="actionHandler"
            type ="com.hegunhee.feature.streamer.StreamActionHandler"
            />

        <variable
            name="liveStreamData"
            type="com.hegunhee.feature.streamer.StreamerViewType.LiveStreamer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> actionHandler.onClickTwitchStreamerItem(liveStreamData.userLogin)}">

        <ImageView
            android:id="@+id/thumb_nail_image_view"
            android:layout_width="@dimen/live_thumb_nail_image_width_size"
            android:layout_height="@dimen/live_thumb_nail_image_height_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/item_start_margin"
            android:layout_marginTop="@dimen/item_top_margin"
            android:layout_marginBottom="@dimen/item_bottom_margin"
            app:setImage="@{liveStreamData.thumbnailUrl}" />

        <ImageView
            android:id="@+id/live_dot_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/live_dot_start_margin"
            android:layout_marginEnd="@dimen/live_dot_end_margin"
            android:layout_marginBottom="@dimen/live_dot_bottom_margin"
            android:src="@drawable/ic_live_dot_15"
            app:layout_constraintBottom_toBottomOf="@id/thumb_nail_image_view"
            app:layout_constraintStart_toStartOf="@id/thumb_nail_image_view" />

        <TextView
            android:id="@+id/viewer_counter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{liveStreamData.viewerCount}"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/live_dot_image"
            app:layout_constraintStart_toEndOf="@id/live_dot_image"
            app:layout_constraintTop_toTopOf="@id/live_dot_image" />

        <ImageView
            android:id="@+id/profile_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:setImage="@{liveStreamData.profileUrl}"
            android:layout_marginStart="@dimen/item_between_start_margin"
            app:layout_constraintTop_toTopOf="@id/thumb_nail_image_view"
            app:layout_constraintStart_toEndOf="@id/thumb_nail_image_view"/>

        <TextView
            android:id="@+id/streamer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_between_small_start_margin"
            android:text="@{liveStreamData.userName}"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/profile_image_view"
            app:layout_constraintStart_toEndOf="@id/profile_image_view"
            app:layout_constraintTop_toTopOf="@id/profile_image_view"
            tools:text="주르르"
            app:layout_constraintEnd_toStartOf="@id/menu_image_view"
            android:maxLines="1"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/menu_image_view"
            android:layout_width="@dimen/item_menu_width_size"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/item_end_margin"
            android:src="@drawable/ic_menu_24"
            app:layout_constraintBottom_toBottomOf="@id/profile_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile_image_view"
            android:onClick="@{() -> actionHandler.onClickMoreMenuButton(liveStreamData.userLogin)}"/>

        <TextView
            android:id="@+id/stream_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_between_small_top_margin"
            android:layout_marginEnd="@dimen/item_end_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{liveStreamData.title}"
            android:textColor="@color/black"
            android:textSize="@dimen/stream_title_text_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/profile_image_view"
            app:layout_constraintTop_toBottomOf="@id/profile_image_view"
            tools:text="방송입니다." />

        <TextView
            android:id="@+id/game_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/item_end_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{liveStreamData.gameName}"
            android:textColor="@color/black"
            android:textSize="@dimen/stream_title_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/profile_image_view"
            app:layout_constraintTop_toBottomOf="@id/stream_title"
            tools:text="Just Chatting" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tag_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_between_small_top_margin"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/game_text"
            app:layout_constraintStart_toStartOf="@id/profile_image_view"
            app:layout_constraintTop_toBottomOf="@id/game_text"
            app:setTags="@{liveStreamData.tags}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
